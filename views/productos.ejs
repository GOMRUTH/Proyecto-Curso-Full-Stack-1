<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title> Productos </title>
        <link rel="stylesheet" href="/css/style.css" type="text/css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>

    <body>
        
        <main class="Contorno Principal">
            <div class="BannerLogo">
                <img src="/img/Logo - Marca/LetraMMnegroFT.png">
            </div>
            <div>
                <nav class="OpcionesMenu">
                    <ul>
                        <li><a href="/principal">Inicio</a></li>
                        <li><a href="/productos">Productos</a></li>
                        <li><a href="/carritoDeCompra">Mi carrito</a></li>
                        <li><a href="/contacto">Contacto</a></li>
                    </ul>
                </nav>
            </div>
        </main>

        <h3> Seccion de Moños: </h3>
        <div class="ProductosContenedores">
            <% productosMonos.forEach(producto => { %>
                <div class="ProductoContenido">
                    <img src="<%= producto.imagen %>">
                    <h4> <%= producto.nombre %> </h4>
                    <p> <%= producto.descripcion %> </p>
                    <span>$<%= producto.precio %></span>
                    <form action="/add-to-cart" method="post">
                        <input type="hidden" name="productId" value="<%= producto.id %>">
                        <button class="boton-carrito" type="submit">Agregar al carrito</button>
                    </form>
                </div>
            <% }); %>
        </div>

        <h3> Seccion de Muñecas: </h3>
        <div class="ProductosContenedores">
            <% productosMunecas.forEach(producto => { %>
                <div class="ProductoContenido">
                    <img src="<%= producto.imagen %>">
                    <h4> <%= producto.nombre %> </h4>
                    <p> <%= producto.descripcion %> </p>
                    <span>$<%= producto.precio %></span>
                    <form action="/add-to-cart" method="POST">
                        <input type="hidden" name="productId" value="<%= producto.id %>">
                        <input type="hidden" name="type" value="munecas">
                        <button type="submit">Agregar al carrito</button>
                    </form>
                </div>
            <% }); %>
        </div>

        <footer class="credito"> 
            <p> Derechos Reservados &copy; 2024 - Ruth Gomez</p>
        </footer>

    </body>
</html>
